#!/bin/ash

pb_usbmount="/mnt/usb"
pb_usbdevice="/dev/sda1"
pb_usbdir="$pb_usbmount/PirateBox"

pb_extimg="$pb_usbdir/OpenWRT.img"
pb_extmount="/mnt/ext"
pb_swapimg="$pb_usbdir/OpenWRT.swap"

#New names
ext_usbmount="$pb_usbmount"
ext_usbdevice="$pb_usbdevice"

ext_usbdir="$pb_usbmount/external_fs"
ext_img="$ext_usbdir/OpenWRT.img"
ext_img_src="$ext_img.gz"
ext_img_src_url="http://downloads.piratebox.de/OpenWRT.img.gz"

ext_swapimg="$ext_usbdir/OpenWRT.swap"

ext_mountpoint="$pb_extmount"
ext_linktarget="/usr/local"

#Statics for more automatic during install
ext_no_install="/tmp/ext_no_auto_ext"
ext_force_ext_overwrite="/tmp/ext_force_ext_overwrite"
ext_force_ext_ignore="/tmp/ext_force_ext_ignore"

